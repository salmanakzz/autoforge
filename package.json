{
    "name": "autoforge",
    "displayName": "autoforge",
    "description": "auto branch, commits, code generator",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.101.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "autoforge.autoBranch",
                "title": "AutoForge: Auto Branch"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "jest"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/vscode": "^1.101.0",
        "@typescript-eslint/eslint-plugin": "^8.31.1",
        "@typescript-eslint/parser": "^8.31.1",
        "@vscode/test-cli": "^0.0.11",
        "@vscode/test-electron": "^2.5.2",
        "eslint": "^9.25.1",
        "jest": "^30.0.4",
        "ts-jest": "^29.4.0",
        "typescript": "^5.8.3"
    }
}
