{
    "name": "autoforge",
    "displayName": "autoforge",
    "description": "auto branch, commits, code generator",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.101.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "type": "object",
            "properties": {
                "myExtension.provider": {
                    "type": "string",
                    "enum": [
                        "groq",
                        "custom"
                    ],
                    "default": "groq",
                    "description": "Choose which AI provider to use",
                    "order": 1
                },
                "myExtension.apiKey": {
                    "type": "string",
                    "default": "",
                    "description": "API Key for the selected provider",
                    "order": 2
                }
            }
        },
        "commands": [
            {
                "command": "autoforge.autoBranch",
                "title": "AutoForge: Auto Branch"
            },
            {
                "command": "autoforge.autoCommit",
                "title": "AutoForge: Auto Commit"
            },
            {
                "command": "autoforge.scm.autoCommit",
                "title": "Auto Commit",
                "icon": "$(sparkle)"
            },
            {
                "command": "autoforge.scm.autoBranch",
                "title": "Auto Branch",
                "icon": "$(git-branch)"
            },
            {
                "command": "autoforge.scm.autoCommitAndBranch",
                "title": "Auto Commit & Branch",
                "icon": "$(rocket)"
            }
        ],
        "menus": {
            "scm/title": [
                {
                    "command": "autoforge.scm.autoCommit",
                    "when": "scmProvider == git",
                    "group": "navigation"
                },
                {
                    "command": "autoforge.scm.autoBranch",
                    "when": "scmProvider == git",
                    "group": "navigation"
                },
                {
                    "command": "autoforge.scm.autoCommitAndBranch",
                    "when": "scmProvider == git",
                    "group": "navigation"
                }
            ],
            "scm/sourceControl": [
                {
                    "command": "autoforge.scm.autoCommit",
                    "when": "scmProvider == git",
                    "group": "inline"
                },
                {
                    "command": "autoforge.scm.autoBranch",
                    "when": "scmProvider == git",
                    "group": "inline"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "jest"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/vscode": "^1.106.1",
        "@typescript-eslint/eslint-plugin": "^8.31.1",
        "@typescript-eslint/parser": "^8.31.1",
        "@vscode/test-cli": "^0.0.11",
        "@vscode/test-electron": "^2.5.2",
        "eslint": "^9.25.1",
        "jest": "^30.0.4",
        "ts-jest": "^29.4.0",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "vscode": "^1.1.37"
    }
}
